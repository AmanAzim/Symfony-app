{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block body %}
<div class="grid grid-col-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
    {% if posts|length > 0 %}
        {% for key,post in posts %}
            {{ include('micro_post/_post.html.twig', { post })}}
        {% endfor %}
    {% else %}
        <p>nothing here</p>
    {% endif %}
</div>
{% endblock %}
