{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block body %}
<div class="grid grid-col-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
    {% if posts|length > 0 %}
        {% for key,post in posts %}
            <div class="mb-4">
                <div class="text-2xl">
                        <a href="{{ path('app_micro_get_single_post', { id: post.id }) }}">
                            {{ post.title }}
                        </a>
                        <br />
                </div>
                <div class="text-xl dark:text-gray-400">
                    {{ post.text }}
                </div>
                <div class="text-gray-500 dark:text-gray-400">
                    {{ post.createdAt | date('M j, Y') }}
                </div>
                <div>
                    <a href="#">Like <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">0</span></a>
                </div>
                 <div class="text-sm text-gray-500 dark:text-gray-400">
                    <a href="#">rumman@gmail.com</a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>nothing here</p>
    {% endif %}
</div>
{% endblock %}
